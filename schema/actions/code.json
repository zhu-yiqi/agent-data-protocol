{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Code Action",
  "type": "object",
  "properties": {
    "class": {
      "type": "string",
      "description": "The class of the action",
      "enum": ["code_action"]
    },
    "language": {
      "type": "string",
      "description": "The language of the code to execute",
      "enum": ["bash", "python"]
    },
    "content": {
      "type": "string",
      "description": "The code to execute"
    },
    "description": {
      "type": "string",
      "description": "The description/thought provided for the action"
    }
  },
  "required": ["class", "language", "content", "description"]
}
