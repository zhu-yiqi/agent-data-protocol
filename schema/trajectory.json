{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Trajectory",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the trajectory"
    },
    "content": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "actions/action.json"
          },
          {
            "$ref": "observations/observation.json"
          }
        ]
      }
    }
  },
  "required": ["content"]
}