{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Image Observation",
  "type": "object",
  "properties": {
    "class": {
      "type": "string",
      "description": "The class",
      "enum": ["image_observation"]
    },
    "content": {
      "type": "string",
      "format": "uri",
      "description": "A URI to the image content"
    },
    "source": {
      "type": "string",
      "description": "The source of the observation (e.g. 'user')"
    }
  },
  "required": ["class", "content"]
}