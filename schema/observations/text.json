{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Text Observation",
  "type": "object",
  "properties": {
    "class": {
      "type": "string",
      "description": "The class",
      "enum": ["text_observation"]
    },
    "content": {
      "type": "string",
      "description": "A textual observation"
    },
    "source": {
      "type": "string",
      "description": "The source of the observation (e.g. 'user')"
    }
  },
  "required": ["class", "content", "source"]
}