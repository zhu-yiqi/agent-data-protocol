{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "unique_id": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "conversations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "enum": ["human", "gpt"]
          },
          "value": {
            "type": "string"
          },
          "thoughts": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "API_name": {
                  "type": "string"
                },
                "API_params": {
                  "type": "object",
                  "properties": {
                    "boxes": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": {
                          "type": "number"
                        },
                        "minItems": 4,
                        "maxItems": 4
                      }
                    },
                    "prompt": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": ["API_name", "API_params"]
            }
          }
        },
        "required": ["from", "value"]
      }
    },
    "data_source": {
      "type": "string"
    }
  },
  "required": ["unique_id", "image", "conversations", "data_source"]
  
}