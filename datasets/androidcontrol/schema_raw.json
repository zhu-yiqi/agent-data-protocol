{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "episode_id": {
      "type": "integer"
    },
    "goal": {
      "type": "string"
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "accessibility_trees": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": ["string", "null"]
            },
            "content_description": {
              "type": ["string", "null"]
            },
            "class_name": {
              "type": "string"
            },
            "bbox": {
              "type": "null"
            },
            "bbox_pixels": {
              "type": "object",
              "properties": {
                "x_min": {
                  "type": "integer"
                },
                "x_max": {
                  "type": "integer"
                },
                "y_min": {
                  "type": "integer"
                },
                "y_max": {
                  "type": "integer"
                },
                "center": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                },
                "width": {
                  "type": "integer"
                },
                "height": {
                  "type": "integer"
                },
                "area": {
                  "type": "integer"
                }
              },
              "required": ["x_min", "x_max", "y_min", "y_max", "center", "width", "height", "area"]
            },
            "hint_text": {
              "type": "null"
            },
            "is_checked": {
              "type": "boolean"
            },
            "is_checkable": {
              "type": "boolean"
            },
            "is_clickable": {
              "type": "boolean"
            },
            "is_editable": {
              "type": "boolean"
            },
            "is_enabled": {
              "type": "boolean"
            },
            "is_focused": {
              "type": "boolean"
            },
            "is_focusable": {
              "type": "boolean"
            },
            "is_long_clickable": {
              "type": "boolean"
            },
            "is_scrollable": {
              "type": "boolean"
            },
            "is_selected": {
              "type": "boolean"
            },
            "is_visible": {
              "type": "boolean"
            },
            "package_name": {
              "type": "string"
            },
            "resource_name": {
              "type": ["string", "null"]
            },
            "tooltip": {
              "type": "null"
            },
            "resource_id": {
              "type": "null"
            }
          },
          "required": [
            "text", "content_description", "class_name", "bbox", "bbox_pixels",
            "hint_text", "is_checked", "is_checkable", "is_clickable", "is_editable",
            "is_enabled", "is_focused", "is_focusable", "is_long_clickable",
            "is_scrollable", "is_selected", "is_visible", "package_name",
            "resource_name", "tooltip", "resource_id"
          ]
        }
      }
    },
    "screenshot_widths": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "screenshot_heights": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action_type": {
            "type": "string"
          }
        },
        "required": ["action_type"],
        "additionalProperties": false
      }
    },
    "step_instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "episode_id", "goal", "screenshots", "accessibility_trees",
    "screenshot_widths", "screenshot_heights", "actions", "step_instructions"
  ]
}