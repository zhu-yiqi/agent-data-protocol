{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "conversations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "enum": ["human", "gpt"]
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["from", "value"]
      }
    },
    "reward": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "source": {
      "type": "string"
    }
  },
  "required": ["id", "conversations", "reward", "source"]
  
}