{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "conversations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant"]
          }
        },
        "required": ["content", "role"]
      }
    }
  },
  "required": ["id", "conversations"]
  
}